<UserControl x:Class="MessangerApp2._0.MessageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MessangerApp2._0" VerticalAlignment="Top"
             >
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <TextBlock x:Name="MessageText" Margin="10,35,10,0" TextWrapping="Wrap" Text="Some text" IsEnabled="False" TextAlignment="Left" FontFamily="Arial" FontSize="16" Foreground="White" FlowDirection="RightToLeft" SizeChanged="MessageText_SizeChanged" Panel.ZIndex="1" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Label x:Name="DateText" Content="Some date" Foreground="White" FontSize="16" FontFamily="Arial" Height="25" VerticalAlignment="Top" HorizontalContentAlignment="Left" Margin="5,5,5,0" HorizontalAlignment="Left" Panel.ZIndex="1"/>

        <Border x:Name="Border" CornerRadius="10" BorderThickness="1" Background="#FF23252B" VerticalAlignment="Center" Margin="0,0,0,0" HorizontalAlignment="Center" Width="2"/>
    </Grid>
</UserControl>
